}

/* Style the buttons inside the tab */
.tab button {
  display: block;
  background: #1F618D;
  color: white;
  padding: 22px 16px;
  width: 100%;
  border : 0;
  text-align: left;
  cursor: pointer;
  transition: 0.3s;
